@model tp4.Models.Tarjeta

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Tarjeta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="id_titular" class="control-label"></label>
                <select asp-for="id_titular" class ="form-control" asp-items="ViewBag.id_titular"></select>
            </div>
            <div class="form-group">
                <label asp-for="numero" class="control-label"></label>
                <input asp-for="numero" class="form-control" />
                <span asp-validation-for="numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="codigoV" class="control-label"></label>
                <input asp-for="codigoV" class="form-control" />
                <span asp-validation-for="codigoV" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="limite" class="control-label"></label>
                <input asp-for="limite" class="form-control" />
                <span asp-validation-for="limite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="consumo" class="control-label"></label>
                <input asp-for="consumo" class="form-control" />
                <span asp-validation-for="consumo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            @if (ViewData["msg"] != null && ViewData["msg"] != "")
            {
                <h3 class="alert alert-danger">@ViewData["msg"]</h3>
            }
        </form>
    </div>
</div>

