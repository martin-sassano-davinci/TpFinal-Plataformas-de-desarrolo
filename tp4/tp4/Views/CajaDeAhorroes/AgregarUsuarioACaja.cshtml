@model tp4.Models.Usuario

@{
    ViewData["Title"] = "Agregar usuario a caja";
}

<h1>@ViewData["Title"]</h1>

<h4>Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="agregarUsuarioACaja">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="dni" class="control-label"></label>
                <input asp-for="dni" class="form-control" />
                <span asp-validation-for="dni" class="text-danger"></span>
            </div>
            <div class="form-group p-1">
                <input type="submit" value="Agregar usuario" class="btn btn-primary" />
            </div>
            <@if (ViewData["msg"] != null && ViewData["msg"] != "")
                 {
    <h3 class="alert alert-danger">@ViewData["msg"]</h3>
}
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
