@model List<Movimiento>

<h1>Movimientos</h1>

<form asp-controller="Movimientoes" asp-action="FiltrarMovimientos" method="post">
    <div class="form-group">
        <label for="detalle">Detalle:</label>
        <input type="text" class="form-control" name="detalle" value="@Context.Request.Query["detalle"].ToString()">
    </div>
    <div class="form-group">
        <label for="monto">Monto:</label>
        <input type="number" class="form-control" name="monto" value="@Context.Request.Query["monto"].ToString()">
    </div>
    <div class="form-group">
        <label for="fecha">Fecha:</label>
        <input type="date" class="form-control" name="fecha" value="@Context.Request.Query["fecha"].ToString()">
    </div>
    <button type="submit" class="btn btn-primary mt-2">Buscar</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Detalle</th>
            <th>Monto</th>
            <th>Fecha</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movimiento in Model)
        {
            <tr>
                <td>@movimiento.detalle</td>
                <td>@movimiento.monto</td>
                <td>@movimiento.fecha.ToShortDateString()</td>
            </tr>
        }
        
    </tbody>
</table>
