@model tp4.Models.Movimiento

@{
    ViewData["Title"] = " Filtrar Movimientos";
}

<h1> Filtrar Movimientos</h1>

<hr />

        
<div class="row">
    <div class="col-md-4">
        <form asp-action="FiltrarMovimientos">
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="detalle" class="control-label"></label>
                <input asp-for="detalle" class="form-control" id="detalle" name="detalle" />
                
            </div>
            <div class="form-group">
                <label asp-for="monto" class="control-label">Montol:</label>
                <input asp-for="monto" class="form-control" placeholder="ej 1000" type="number" min="1" id="monto" name="monto"/>
                
            </div>

            <div class="form-group">
                <label asp-for="fecha" class="control-label">Fecha</label>
                <input asp-for="fecha" class="form-control" type="datetime" id="fecha" name="fecha" />
            </div>
            <!--
             <div class="form-group">
                 <label asp-for="id_Caja" class="control-label"></label>
                 <select asp-for="id_Caja" class ="form-control" asp-items="ViewBag.id_Caja"></select>
             </div>
              -->
            <div class="form-group">
                <input type="submit" value="Filtrar" class="btn btn-primary" />
            </div>
            @if (ViewBag.msg != null)
            {
                <div class="alert alert-danger text-center">
                    <p>@ViewBag.msg</p>
                    
                </div>
            }
        </form>
    </div>
</div>
